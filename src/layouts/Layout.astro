---
import Nav from '../components/Nav.vue';
import NavMobile from '../components/NavMobile.vue';
import BottomMobileBar from '../components/BottomMobileBar.vue';
const headerMessage = 'Envios en todo el pais';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Home Store</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
  </head>
  <body class="font-inter">
    <header>
      <div class="hidden md:block fixed z-10 w-full">
        <Nav headerMessage={headerMessage} phoneNumber="+503 2519-3570" client:load />
      </div>
      <div class="md:hidden fixed w-full z-10">
        <NavMobile headerMessage={headerMessage} client:visible />
      </div>
    </header>
    <main class="pt-32 md:pb-0 md:pt-112 bg-[#FBFBFB] relative min-h-screen ">
      <slot />
    </main>
    <div class="md:hidden">
      <BottomMobileBar client:visible />
    </div>
  </body>
</html>
