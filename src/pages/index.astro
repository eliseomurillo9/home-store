---
import Layout from "../layouts/Layout.astro";
import Carrousel from "../components/lading-page/Carrousel.vue";
import Poster from "../components/shared/Poster.vue";
import image from "../assets/cat-and-dog-happy.jpg";
import image2 from "../assets/How to furnish your home on a budget.webp";
import SolidButton from "../components/buttons/SolidButton.vue";
import CategoryCard from "../components/shared/CategoryCard.vue";
import imageCat from "../assets/KINGSEVEN-lunettes-De-soleil-en-bois-naturel-pour-hommes-polaris-es-la-mode-originales-Oculos-De.jpg_Q90.jpg_.webp";
import CardsContainer from "../components/shared/CardsContainer.vue";


const categoriesSection = [
  {
    img: image,
    alt: "Perro y gato sentados",
    message: "Mascotas",
    isLink: true,
    buttonMessage: "prueba",
    href: "/Mascotas",
  },
  {
    img: image2,
    alt: "salon de hogar",
    message: "Decoracion",
    isLink: true,
    buttonMessage: "prueba",
    href: "/Decoracion",
  },
];

const categoryPoster ={
  id: 1,
    img: image,
    alt: "Perro y gato sentados",
    message: "Mascotas",
    isLink: true,
    buttonMessage: "prueba",
    href: "/Mascotas",
  };


---

<Layout title="Welcome ELiseo">
  <div>
    <Carrousel />
    <section class="container m-auto">
      <div class="sm:columns-3xs md:columns-2 gap-5 mt-6 pb-2">
        {
          categoriesSection.map((category) => (
            <Poster
              imgSrc={category.img}
              imgAlt={category.alt}
              class=" h-64 md:h-80"
            >
              <div class="absolute bottom-5 left-5 gap-4">
                <h2 class="text-3xl font-semibold pb-2 text-white">
                  {category.message}
                </h2>
                <SolidButton
                  isLink={category.isLink}
                  message={category.buttonMessage}
                />
              </div>
            </Poster>
          ))
        }
      </div>
    </section>
    <div class="h-px bg-gray-light my-9"></div>
    <section class="px-4 pt-2">
      <h2 class="text-center text-xl font-semibold text-gray mb-4">Productos mas vendidos</h2>
     <div class="grid grid-cols-2 md:grid-cols-4 gap-4 justify-between pt-2">
      <CardsContainer client:load/>
     </div>
    </section>
    <div class="h-px bg-gray-light my-9"></div>
    <section class="container m-auto">
      <div class="columns-1 gap-5 mt-6 pb-2">
        
            <Poster
              imgSrc={categoryPoster.img}
              imgAlt={categoryPoster.alt}
              class=" h-64 md:h-80"
            >
              <div class="absolute bottom-5 left-5 gap-4">
                <h2 class="text-3xl font-semibold pb-2 text-white">
                  {categoryPoster.message}
                </h2>
                <SolidButton
                  isLink={categoryPoster.isLink}
                  message={categoryPoster.buttonMessage}
                />
              </div>
            </Poster>
      </div>
    </section>
    <div class="h-px bg-gray-light my-9"></div>
    <section class="px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 justify-between pt-2">
        <CategoryCard img={imageCat} class="m-auto"/>
        <CategoryCard img={imageCat} class="m-auto"/>
        <CategoryCard img={imageCat} class="m-auto"/>
        <CategoryCard img={imageCat} class="m-auto"/>
      </div>
    </section>
  </div>
</Layout>
